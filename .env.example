# Environment Variables
# Copy this file to .env and fill in your API keys

# Azure Document Intelligence Configuration  
# Must be a full base URL like: https://<resource-name>.cognitiveservices.azure.com/
AZURE_CONTENT_UNDERSTANDING_ENDPOINT=your_azure_document_intelligence_endpoint_here
AZURE_CONTENT_UNDERSTANDING_KEY=your_azure_document_intelligence_key_here

# Azure OpenAI Configuration (required for chat + Excel workbook filling)
# Endpoint must be a full base URL like: https://<your-openai-resource>.openai.azure.com/
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint_here
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_DEPLOYMENT=your_gpt_deployment_name_here
# Optional override; defaults to a recent preview if unset
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Legacy variable names (supported for compatibility)
REACT_APP_AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint_here
REACT_APP_AZURE_OPENAI_KEY=your_azure_openai_key_here
REACT_APP_AZURE_OPENAI_DEPLOYMENT_NAME=your_whisper_deployment_name_here
REACT_APP_AZURE_OPENAI_CHAT_ENDPOINT=your_azure_openai_chat_endpoint_here
REACT_APP_AZURE_OPENAI_CHAT_KEY=your_azure_openai_chat_key_here

# Server Configuration
PORT=8080